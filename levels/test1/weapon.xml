                <position x="-20.0" y="3.0" z="0.0"/>
            </physicsobject>
            <debugobject>
                <debugsphere detail="3"/>
            </debugobject>

            <!-- <position>
                 <rotation> -->

            <weaponinfo>
                <offset x="0.1" y="0.1" z="-0.1"/>
                <twist x="0.0" y="1.0" z="0.0" angle="15.0"/>

                <totalbullets amount="180"/>
                <magazinesize size="30"/>
                <magazinebullets amount="30"/>

                <!-- <recoil> -->

                <shotspeed speed="0.1"/>
                <shotpower power="20.0"/>
            </weaponinfo>
        </weapon>

    </weapons>
