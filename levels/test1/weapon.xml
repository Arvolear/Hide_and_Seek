<?xml version="1.0"?>
<WeaponFile>
    <weapons>

        <weapon name="test">
            <graphicsobject path="/animated_models/Gun/gun.fbx">
                <viewfrustum apply="true"/>
                <animations>
                    <animation name="reload1" active="false">
                        <animid id="3"/>
                        <framesrange start="0.0" end="0.0"/>
                        <speed speed="0.0"/>
                        <loop loop="false"/>
                    </animation>
                    <animation name="reload2" active="false">
                        <animid id="15"/>
                        <framesrange start="0.0" end="0.0"/>
                        <speed speed="0.0"/>
                        <loop loop="false"/>
                    </animation>
                    <animation name="walk" active="false">
                        <animid id="17"/>
                        <framesrange start="0.0" end="0.0"/>
                        <speed speed="0.0"/>
                        <loop loop="false"/>
                    </animation>
                    <animation name="fire" active="false">
                        <animid id="7"/>
                        <framesrange start="0.0" end="0.0"/>
                        <speed speed="0.0"/>
                        <loop loop="false"/>
                    </animation>
                    <animation name="idle" active="true">
                        <animid id="12"/>
                        <framesrange start="0.0" end="0.0"/>
                        <speed speed="0.0"/>
